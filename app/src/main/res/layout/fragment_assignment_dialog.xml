<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AssignmentDialogFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:paddingBottom="12sp"
        android:text="Dialog Title" />
    <TextView
        android:id="@+id/dialog_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:textSize="16sp"
        android:text="Dialog description" />

    <TextView
        android:id="@+id/dialog_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Points possible"
        android:layout_alignBaseline="@+id/dialog_description"
        android:layout_alignBottom="@+id/dialog_description"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/dialog_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Course ID"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
