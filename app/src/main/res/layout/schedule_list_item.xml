<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="1"
    android:paddingLeft="15dp"
    android:layout_marginBottom="8dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardBackgroundColor="@color/blue"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/assignment_type_image"
                android:src="@drawable/ic_certificate_white_48dp"
                android:scaleType="centerCrop"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/card_top_line">
                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:text="@+id/assignment_name" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:00"
                android:id="@+id/assignment_due_time"
                android:layout_below="@+id/card_top_line"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 points"
                android:id="@+id/assignment_points_possible"
                android:layout_below="@+id/card_top_line"
                android:layout_alignEnd="@+id/assignment_type_image" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>