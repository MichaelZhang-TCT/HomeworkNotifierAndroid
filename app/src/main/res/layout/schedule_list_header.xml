<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/header_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/header_date"
        android:padding="15dp"/>

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_alignBottom="@+id/header_date_textview"
        android:layout_toRightOf="@+id/header_date_textview"
        android:layout_toEndOf="@+id/header_date_textview"
        android:layout_marginBottom="22dp" />

</RelativeLayout>